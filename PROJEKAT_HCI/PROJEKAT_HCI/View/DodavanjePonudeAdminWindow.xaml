<Window x:Class="PROJEKAT_HCI.View.DodavanjePonudeAdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:apex="clr-namespace:Apex.Controls;assembly=Apex"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:PROJEKAT_HCI.View"
        mc:Ignorable="d"
        Title="DodavanjePonudeAdminWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="TextBox" x:Key="Textbox1">
            <Setter Property="Padding" Value="7"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Foreground" Value="#000"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="MinHeight" Value="30"/>
            <Setter Property="MinWidth" Value="250"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border"
                            CornerRadius="10"
                            BorderBrush="#000"
                            BorderThickness="2"
                            Background="#fff">

                            <ScrollViewer x:Name="PART_ContentHost"
                            Focusable="false"
                            HorizontalScrollBarVisibility="Hidden"
                            VerticalScrollBarVisibility="Hidden"/>
                        </Border>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Background="MediumPurple">
        <Grid.RowDefinitions >
            <RowDefinition  Height="13*" />
            <RowDefinition Height="84*" />

        </Grid.RowDefinitions>
        <Label Background="Purple" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">Dodavanje saradnika</Label>
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"  HorizontalAlignment="Center" VerticalAlignment="Center">

            <apex:ApexGrid Rows="auto,auto" Columns="auto,auto" Margin="150,0,0,0">
                <Label Content="Cijena" HorizontalAlignment="left" VerticalAlignment="Center" Foreground="Black" FontSize="15" Grid.RowSpan="2"/>
                <TextBox Name="Cijena" Style="{StaticResource Textbox1}"  Margin="150,8,0,0"></TextBox>
            </apex:ApexGrid>
            <apex:ApexGrid Rows="auto,auto" Columns="auto,auto" Margin="150,0,0,0">

                <Label  Content="Saradnik" HorizontalAlignment="left" VerticalAlignment="Center" Foreground="Black" FontSize="15" Grid.RowSpan="2"/>
                <ComboBox Margin="150,20,20,0"
                    x:Name="Saradnik"
                    Style="{StaticResource MaterialDesignComboBox}" 
                    
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    
                    Width="256" Height="35" Background="White">
                    
                </ComboBox>

            </apex:ApexGrid>
            



            <StackPanel  Orientation="Horizontal" Margin="150,0,0,0">
                <Label Margin="10,10,10,10" Content="Opis" HorizontalAlignment="left" VerticalAlignment="Top" Foreground="Black" FontSize="15" Grid.RowSpan="2"/>



                <TextBox
                        Name="Opis"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        VerticalAlignment="Top"
                                        HorizontalAlignment="Right"
                        Height="100" Width="150"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto"
                        materialDesign:HintAssist.Hint="Opišite saradnika"  
                        Margin="100,10,10,10"
                    Background="White"
                         />
            </StackPanel>

            <apex:ApexGrid Rows="auto,auto" Columns="auto,auto" Margin="150,0,0,0">
                <Image Margin="5 5 60 5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Name="slika" Source="pack://application:,,,/Res/Images/default.jpg" Height="80"></Image>

                <Button Margin="10 10 10 10"  x:Name="Dodaj_slikuBtn" Click="Dodaj_slikuBtn_Click" Grid.Column="1" FontSize="17 " Height="35" Content="DODAJTE SLIKU"/>

            </apex:ApexGrid>








            <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                <Button Click="odustao_Click" Name="odustao" Width="140" Content="Odustani"  Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Margin="116,0,136,0"  />
                <Button Click="Dodaj_ponudu_Click" x:Name="Dodaj_ponudu" Content="Dodaj ponudu" Width="140" Margin="116,0,136,0"/>

            </StackPanel>

        </StackPanel>


    </Grid>
</Window>
