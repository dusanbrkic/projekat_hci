<Window x:Class="PROJEKAT_HCI.View.KlijentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROJEKAT_HCI.View"
        mc:Ignorable="d"
        Title="KlijentWindow" Height="450" Width="800">
    <Grid Background="MediumPurple">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"></ColumnDefinition>
            <ColumnDefinition Width="200*"></ColumnDefinition>
            <ColumnDefinition Width="211*"></ColumnDefinition>
            <ColumnDefinition Width="144*"/>
            <ColumnDefinition Width="43*"></ColumnDefinition>
            <ColumnDefinition Width="100*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"></RowDefinition>
            <RowDefinition Height="245*"></RowDefinition>
            <RowDefinition Height="73*"></RowDefinition>
            <RowDefinition Height="53*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="Pregled organizatora" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Background="Purple" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,4.2,0.6"></Label>
        <Button Click="OdjavaBtn_Click" Name="OdjavaBtn" Grid.Column="4" Grid.Row="0" Content="Odjavite se" Background="Red" Margin="0,0,0,1" Grid.ColumnSpan="2"/>
        <Button Name="UrediProfilBtn" Grid.Column="3" Grid.Row="0" Content="Uredi profil" Background="LightBlue" Margin="0,0,0,1"></Button>
        <Button Click="NovaProslavaBtn_Click" Name="NovaProslavaBtn" Grid.Row="2" Grid.Column="1" Content="Zakazi novu proslavu" Background="LightCyan" Margin="10,10,15,0"/>
        <Button Click="PregledProslavaBtn_Click" x:Name="PregledProslavaBtn" Grid.Row="2" Grid.Column="2" Content="Pregled proslava" Background="LightCyan" Margin="10,10,15,0"/>
        <Button Click="PregledPonudaBtn_Click" x:Name="PregledPonudaBtn" Grid.Row="2" Grid.Column="3" Content="Pregled ponuda" Background="LightCyan" Margin="10,10,15,0" Grid.ColumnSpan="2"/>
        <Image Margin="11.8,10,4.4,35" Grid.Column="1" RenderTransformOrigin="0.534,0.506" Grid.RowSpan="4" d:IsHidden="True">
            <Image.Source>
                <BitmapImage  UriSource="proslava-18-rodjendana.jpg" />
            </Image.Source>
        </Image>
        
    </Grid>
</Window>
