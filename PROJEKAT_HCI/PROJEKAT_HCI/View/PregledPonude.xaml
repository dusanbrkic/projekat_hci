<Window x:Class="PROJEKAT_HCI.View.PregledPonude"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROJEKAT_HCI.View"
        mc:Ignorable="d"
        Title="PregledPonude" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <BitmapImage x:Key="accept" UriSource="accept.png">

            </BitmapImage>
            <BitmapImage x:Key="decline" UriSource="denied.png">

            </BitmapImage>
            <BitmapImage x:Key="comment" UriSource="comment.png">

            </BitmapImage>

        </ResourceDictionary>


    </Window.Resources>
    <Grid Background="MediumPurple">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="350*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"></ColumnDefinition>
            <ColumnDefinition Width="225*"></ColumnDefinition>
            <ColumnDefinition Width="225*"></ColumnDefinition>
            <ColumnDefinition Width="50*"></ColumnDefinition>
            <ColumnDefinition Width="50*"></ColumnDefinition>
            <ColumnDefinition Width="50*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Content="Ponuda:" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" Background="Purple" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,0,0.6"/>
        <Label Content="Ponuda:" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" VerticalContentAlignment="Center"/>
        <Button Name="PrihvatiPonuduBtn" Grid.Column="3" Grid.Row="1" Background="Transparent"  BorderThickness="0"  >
            <Viewbox>
                <Image Source="{StaticResource accept}"></Image>
            </Viewbox>
        </Button>
        <Button Name="OdbijPonuduBtn" Grid.Column="4" Grid.Row="1" Background="Transparent"  BorderThickness="0"  >
            <Viewbox>
                <Image Source="{StaticResource decline}" Height="288" Width="284"></Image>
            </Viewbox>
        </Button>
        <Button Name="KomentarPonuduBtn" Grid.Column="5" Grid.Row="1" Background="Transparent"  BorderThickness="0"  >
            <Viewbox>
                <Image Source="{StaticResource comment}" Height="288" Width="284"></Image>
            </Viewbox>
        </Button>
        <TextBox Margin="100,5,25,5"  Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"/>
        <DataGrid Name="ponudaTable" Margin ="10,10,10,50 " Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" Grid.RowSpan="3" Grid.ColumnSpan="5"
                    ScrollViewer.CanContentScroll="True" 
              ScrollViewer.VerticalScrollBarVisibility="Visible"
              ScrollViewer.HorizontalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Saradnik" Width="20*"></DataGridTextColumn>
                <DataGridTextColumn Header="Cena" Width="20*"></DataGridTextColumn>
                <DataGridTextColumn Header="Zadatak Saradnika" Width="20*"></DataGridTextColumn>
                <DataGridTextColumn Header="Opis" Width="20*"></DataGridTextColumn>
                <DataGridTextColumn Header="Postavi Odgovor" Width="20*"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Ukupna cena:" Grid.Row="3" Grid.Column="1" VerticalContentAlignment="Center" Margin ="10,5,5,0 "/>
        <Label Content="Cena" Grid.Row="3" Grid.Column="1" VerticalContentAlignment="Center" Margin ="100,5,5,0 "/>
        <Button Name="NazadBtn" Grid.Column="2" Grid.Row="3" Content="Nazad" Background="LightGray" Margin="50,5,138,5"/>
        <Button Name="PotvrdiZahtevBtn" Grid.Column="2" Grid.Row="3" Content="Potvrdi zahtev" Background="LightBlue" Margin="200,5,0,5"/>
    </Grid>
</Window>
